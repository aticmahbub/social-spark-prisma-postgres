model Participant {
  id       String    @id @default(uuid())

  user     User     @relation(fields: [userId], references: [id])
  userId   String

  event    Event    @relation(fields: [eventId], references: [id])
  eventId  String

  joinedAt DateTime  @default(now())

  @@unique([userId, eventId]) // ğŸ” prevent double join
}
