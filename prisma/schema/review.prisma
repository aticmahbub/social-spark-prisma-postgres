// REVIEWS
model Review {
  id                       String    @id @default(uuid())
  rating  Int // 1â€“5 stars
  comment                  String?

  reviewer                 User     @relation("UserReviews", fields: [reviewerId], references: [id])
  reviewerId               String

  event                    Event    @relation(fields: [eventId], references: [id])
  eventId                  String

  createdAt                DateTime  @default(now())
}
