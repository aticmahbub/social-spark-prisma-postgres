generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

//
// ---------------------------
// DATABASE & GENERATORS
// ---------------------------
// ---------------------------
// ENUMS
// ---------------------------
enum Role {
  USER
  HOST
  ADMIN
}

enum EventStatus {
  OPEN
  FULL
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

// ---------------------------
// MODELS
// ---------------------------

// USERS
model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  bio      String?
  image    String?
  location String?
  role     Role    @default(USER)

  interests    UserInterest[]
  hostedEvents Event[]        @relation("HostedEvents")
  joinedEvents Participant[]
  reviews      Review[]       @relation("UserReviews")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  payments Payment[]
}

// INTEREST TAGS
model Interest {
  id    String         @id @default(uuid())
  name  String         @unique
  users UserInterest[]
}

// USER–INTEREST PIVOT TABLE
model UserInterest {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  interest   Interest @relation(fields: [interestId], references: [id])
  interestId String
}

// EVENTS
model Event {
  id              String      @id @default(uuid())
  name            String
  type            String
  description     String
  date            DateTime
  location        String
  minParticipants Int
  maxParticipants Int
  image           String?
  joiningFee      Float       @default(0)
  status          EventStatus @default(OPEN)

  host   User   @relation("HostedEvents", fields: [hostId], references: [id])
  hostId String

  participants Participant[]
  reviews      Review[]
  payments     Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// PARTICIPANTS (USER JOIN EVENT)
model Participant {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String

  createdAt DateTime @default(now())

  @@unique([userId, eventId]) // Prevent joining twice
}

// REVIEWS
model Review {
  id      String  @id @default(uuid())
  rating  Int // 1–5 stars
  comment String?

  reviewer   User   @relation("UserReviews", fields: [reviewerId], references: [id])
  reviewerId String

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String

  createdAt DateTime @default(now())
}

// PAYMENTS (SSLCommerz / Stripe Compatible)
model Payment {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  event   Event  @relation(fields: [eventId], references: [id])
  eventId String

  amount        Float
  transactionId String?
  status        PaymentStatus @default(PENDING)

  createdAt DateTime @default(now())
}
